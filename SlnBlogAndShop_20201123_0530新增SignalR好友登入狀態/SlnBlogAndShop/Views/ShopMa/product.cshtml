@*@model IEnumerable<SlnBlogAndShop.ViewModel.CProduct>*@
@using PagedList
@using PagedList.Mvc
@model IPagedList<SlnBlogAndShop.ViewModel.CProduct>
@{

    ViewBag.Title = "product";
}
<link href="~/Content/PagedList.css" rel="stylesheet" />
<script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>


<script>

    $(function () {
        feather.replace(),
        $.ajax({
            type: "get",
            url: "@Url.Action("ShowProductTable",new { page=1})",
            success: function (result) {
                $("#tables").html(result),
                feather.replace();
            }
        });
    });
</script>
<div>
    <div class="page-content  ">
        <div class="container">
            <div class="row justify-content-start">
                <div class="col">
                    <input type="text" id="datepicker" placeholder="開始日">
                    <input type="text" id="datepicker2" placeholder="截止日">
                    <input type="text" placeholder="商品名稱">
                    <span>　　</span>
                    <button type="button" class="btn btn-primary">搜尋</button>
                </div>

                <div class="w-100">　　</div>

                <div class="col">
                    <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                        <div class="btn-group mr-2" role="group" aria-label="First group">
                            <button type="button" class="btn btn-danger btn btn-secondary">全部刪除</button>
                        </div>
                        <div class="btn-group mr-2" role="group" aria-label="Second group">
                            <a href="create" type="button" class="btn btn-success btn btn-secondary">新增</a>
                        </div>
                    </div>
                </div>

                <div class="w-100">　　</div>

                <div id="tables" class="col">
                    <!--inserttable-->

                </div>

                <div class="w-100">　　</div>

                <div class="col">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination"></ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>

</div>
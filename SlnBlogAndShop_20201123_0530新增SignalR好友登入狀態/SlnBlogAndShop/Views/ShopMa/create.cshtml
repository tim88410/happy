
@model IEnumerable<SlnBlogAndShop.ViewModel.CProduct>


@{
    ViewBag.Title = "create";
}

<div class="page-content  ">
    <div class="container">
        <div class="row justify-content-start">

            @using (Html.BeginForm("create", "ShopMa", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                @Html.AntiForgeryToken()

                <div>
                    <h4>新增商品</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div>
                        <input type="hidden" name="fProductlaunch" value="@DateTime.Now" />


                        <div class="form-group">
                            <span>商品名稱</span>
                            <div class="col-md-10">
                                <input type="text" name="fProductName" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">
                            <span>商品價格</span>

                            <div class="col-md-10">
                                <input type="text" name="fUnitprice" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">
                            <span>商品描述</span>

                            <div class="col-md-10">
                                <input type="text" name="fProductdescription" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-md-10">
                                <span>分類</span>
                                <select class="form-control" id="fCategoryId" name="fCategoryId">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <span>庫存</span>

                            <div class="col-md-10">
                                <input type="text" name="fProductinstock" class="form-control" />
                            </div>
                        </div>


                        <div class="form-group">
                            <span>商品規格</span>
                            <div class="col-md-10">
                                <select class="form-control" name="fExamplesize">
                                    <option selected disabled>尺寸</option>
                                    <option>S</option>
                                    <option>M</option>
                                    <option>L</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <span>商品圖片</span>

                            <div class="col-md-10">
                                <input type="file" name="image" />
                            </div>
                        </div>
                    </div>
                </div>

                <a href="product" type="button" class="btn btn-secondary">離開</a>
                <input type="submit" class="btn btn-primary" value="儲存">
            }

        </div>
    </div>
</div>